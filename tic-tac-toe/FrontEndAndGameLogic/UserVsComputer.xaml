                VerticalAlignment="Top"
                Height="75"
                Width="75"
                Click="OnButtonClick20"
                FontWeight="Bold"
                FontSize="20" />
        <Button x:Name="button21"
                HorizontalAlignment="Left"
                Margin="193,307,0,0"
                VerticalAlignment="Top"
                Height="75"
                Width="75"
                Click="OnButtonClick21"
                FontWeight="Bold"
                FontSize="20" />
        <Button x:Name="button22"
